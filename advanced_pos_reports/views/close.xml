<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit the POS Session form view to add the button -->
        <record id="view_pos_session_form_inherit" model="ir.ui.view">
            <field name="name">pos.session.form.inherit</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='open_frontend_cb']" position="after">
                    <button name="force_close_session" type="object" string="Forzar Cierre" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
