<odoo>
    <data noupdate="1">
        
        <!-- ============================================================ -->
        <!-- SECUENCIA: Subcontratos -->
        <!-- ============================================================ -->
        <record id="seq_construction_subcontract" model="ir.sequence">
            <field name="name">Subcontrato</field>
            <field name="code">construction.subcontract</field>
            <field name="prefix">SC-</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
        </record>
        <!-- Resultado: SC-0001, SC-0002, SC-0003... -->

        <!-- ============================================================ -->
        <!-- SECUENCIA: Avances de Obra -->
        <!-- ============================================================ -->
        <record id="seq_construction_work_progress" model="ir.sequence">
            <field name="name">Avance de Obra</field>
            <field name="code">construction.work.progress</field>
            <field name="prefix">AV-%(year)s-</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
        </record>
        <!-- Resultado: AV-2025-0001, AV-2025-0002... -->
        <!-- Se reinicia cada año automáticamente -->

        <!-- ============================================================ -->
        <!-- SECUENCIA ALTERNATIVA: Por Proyecto -->
        <!-- Si quieres que cada proyecto tenga su propia numeración -->
        <!-- ============================================================ -->
        <record id="seq_construction_work_progress_by_project" model="ir.sequence">
            <field name="name">Avance de Obra por Proyecto</field>
            <field name="code">construction.work.progress.by.project</field>
            <field name="prefix">AV-%(range_year)s-PRO%(project_code)s-</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
        <!-- Resultado: AV-2025-PROTORRE-001, AV-2025-PROTORRE-002... -->
        <!-- Requiere personalización en el código Python para inyectar project_code -->

        <record id="seq_construction_subcontract" model="ir.sequence">
            </record>
        
        <record id="seq_construction_work_progress" model="ir.sequence">
            </record>

        <record id="seq_construction_guarantee_retention" model="ir.sequence">
            <field name="name">Garantía Retenida Ref.</field>
            <field name="code">construction.guarantee.retention</field>
            <field name="prefix">GR</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
        </record>


    </data>
</odoo>