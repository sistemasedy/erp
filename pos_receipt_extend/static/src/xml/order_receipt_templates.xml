<?xml version="1.0" encoding="UTF-8"?>
<templates id="point_of_sale.template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
            <div class="pos-receipt">
                <!-- Encabezado -->
                <div style="text-align: center; margin-bottom: 10px;">
                    <img t-att-src="receipt.company.logo" style="height: 60px;" alt="Company Logo"/>
                    <div><strong><t t-esc="receipt.company.name"/></strong></div>
                    <div><t t-esc="receipt.company.contact_address"/></div>
                    <div>Tel: <t t-esc="receipt.company.phone"/></div>
                    <div><t t-esc="receipt.company.website"/></div>
                </div>
                
                <!-- InformaciÃ³n del recibo -->
                <div style="margin-bottom: 10px;">
                    <div>Receipt: <t t-esc="receipt.name"/></div>
                    <div>Date: <t t-esc="receipt.date.order"/></div>
                    <div>Client: <t t-esc="receipt.client.name"/></div>
                    <div>Served by: <t t-esc="receipt.user.name"/></div>
                </div>
                
                <hr style="border: 1px dashed black;"/>

                <!-- Detalles de productos -->
                <table style="width: 100%; font-size: 12px; border-collapse: collapse; margin-bottom: 10px;">
                    <thead>
                        <tr style="border-bottom: 1px dashed black;">
                            <th style="text-align: left;">Product</th>
                            <th style="text-align: center;">Qty</th>
                            <th style="text-align: right;">Unit Price</th>
                            <th style="text-align: right;">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="receipt.orderlines" t-as="line">
                            <td><t t-esc="line.product_name"/></td>
                            <td style="text-align: center;"><t t-esc="line.quantity"/></td>
                            <td style="text-align: right;"><t t-esc="line.price_unit"/></td>
                            <td style="text-align: right;"><t t-esc="line.price_subtotal_incl"/></td>
                        </tr>
                    </tbody>
                </table>
                
                <hr style="border: 1px dashed black;"/>

                <!-- Totales -->
                <div style="text-align: right; margin-bottom: 10px;">
                    <div>Total: <t t-esc="receipt.total_with_tax"/></div>
                    <div>Discounts: <t t-esc="receipt.total_discount"/></div>
                    <div>Total Taxes: <t t-esc="receipt.total_tax"/></div>
                </div>

                <!-- Pagos -->
                <div style="margin-bottom: 10px;">
                    <div>Cash: <t t-esc="receipt.paymentlines[0].amount"/></div>
                    <div>Change: <t t-esc="receipt.change"/></div>
                </div>

                <div style="text-align: center; font-size: 12px; margin-top: 10px;">
                    <strong>THANK YOU. PLEASE VISIT AGAIN!</strong>
                </div>
            </div>
        </xpath>
    </t>
</templates>

