<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductListSearch" owl="1">
        <div class="table-responsive">
            <ProductsWidgetControlPanelSearch />
            <table id="myTable" class="flexy">
              <tr id="rowProduct" t-foreach="props.products" t-as="product" t-key="product.id" tabindex="0" t-on-keypress="spaceClickProduct"
                 t-on-click="trigger('click-product', product)"
                 t-att-data-product-id="product.id">
                  <td>
                      <t t-esc="product.display_name" />
                  </td>
                  <td>
                      <t t-esc="product.lst_price" />
                  </td>
                  <td>
                      <t t-esc="product.barcode" />
                  </td>
              </tr>
            </table>
        </div>
    </t>

</templates>
