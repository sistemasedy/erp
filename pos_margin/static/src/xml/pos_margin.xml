<templates id="template" xml:space="preserve">  

    <t t-name="ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('button')]" position="inside">
            <span> F-4 </span>
        </xpath>
    </t>

    <t t-name="PaymentDirect" owl="1">
        <div class="control-button">
            <div id="direct" class="control-button-cobrar">
                F-2 Imprimir
            </div>
        </div>
   </t>

   <t t-name="ProductSearch" owl="1">
        <div class="control-button">
            <div id="direct2" class="control-button-cobrar" t-on-click="trigger('click-superate')">
                F-8 Targeta
            </div>
        </div>
   </t>


   <t t-name="ClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('top-content')]" position="inside">
            <div t-if="state.detailIsShown" class="searchbox-client top-content-center">
                <input id="num_ncf" placeholder="Numero de Comprobante" size="1"/>
                <span class="search-clear-client"></span>
            </div>
            <div t-if="state.detailIsShown" class="button back" t-on-click="provar">
                <t t-if="!env.isMobile">Buscar</t>
                <t t-else="">
                    <i class="fa fa-undo"></i>
                </t>
            </div>
        </xpath>
    </t>

    <t t-name="Chrome" t-inherit="point_of_sale.Chrome" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-branding')]" position="inside">
            <div class="targeta">
                <input  id="superate-search" placeholder="Limite de Targeta" />
            </div>
            <div class="targeta" >
                <input  id="resultado" placeholder="Difer."/>
            </div>
        </xpath>
    </t>





    <t t-name="ClearCart" owl="1">
        <div id="clear" class="control-button">
            Borrar
        </div>
   </t>

   <t t-name="ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pay-circle')]" position="after">
            F-4
        </xpath>
    </t>

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('next_text')]" position="after">
            <span> F-4 </span>
        </xpath>
    </t>

</templates>
