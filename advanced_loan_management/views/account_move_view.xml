<odoo>
    <record id="account_move_eg_discount_form_view" model="ir.ui.view">
        <field name="name">account.move.eg.discount.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[1]" position="inside">
                <field name="ver_campos" invisible="1"/>
                <field name="credito" attrs="{invisible': [ ('ver_campos', '=',False)]}"/>
                <field name="usar_credito" attrs="{invisible': [ ('ver_campos', '=',False)]}"/>
            </xpath>
        </field>
    </record>
   
</odoo>