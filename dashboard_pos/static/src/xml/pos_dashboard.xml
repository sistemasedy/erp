<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PosDashboard">
        <div class="oh_dashboards">
            <div class="container-fluid o_pos_dashboard">
                <!-- Content for PosDashboard goes here -->
            </div>
        </div>
    </t>
    <t t-name="PosOrders">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-end mb-3">
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                                <span class="fa fa-calendar" title="Dates"></span>
                                Rango de Fecha
                            </a>
                            <div class="dropdown-menu">
                                <div class="form-group px-3">
                                    <label for="date_from">Fecha Inicial:</label>
                                    <div class="input-group date" id="date_from" data-target-input="nearest">
                                        <input type="date" id="start_date" name="date_from" class="form-control"
                                               data-target="#date_from"/>
                                        <div class="input-group-append" data-target="#date_from" data-toggle="datetimepicker">
                                            <span class="input-group-text">
                                                <span class="fa fa-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                    <label for="date_to">Fecha Final:</label>
                                    <div class="input-group date" id="date_to" data-target-input="nearest">
                                        <input type="date" id="end_date" name="date_to" class="form-control"
                                               data-target="#date_to"/>
                                        <div class="input-group-append" data-target="#date_to" data-toggle="datetimepicker">
                                            <span class="input-group-text">
                                                <span class="fa fa-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" id="fetch_data_btn" class="btn btn-primary mx-1">
                            Buscar por fecha
                        </button>
                        <button type="button" id="fetch_hoy_btn" class="btn btn-primary mx-1">
                            El Dia de Hoy
                        </button>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="stat-icon" style="background:#5bcbd0"><i class="fa fa-shopping-bag"></i></div>
                                <div class="stat-content ml-3">
                                    <div class="stat-head">Total Venta</div>
                                    <div class="stat_count"><t t-esc="widget.venta"/></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="stat-icon" style="background:#5bcbd0"><i class="fa fa-shopping-bag"></i></div>
                                <div class="stat-content ml-3">
                                    <div class="stat-head">Total Costos</div>
                                    <div class="stat_count"><t t-esc="widget.total_cost"/></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="stat-icon" style="background:#5bcbd0"><i class="fa fa-money"></i></div>
                                <div class="stat-content ml-3">
                                    <div class="stat-head">Ganancia Bruta</div>
                                    <div class="stat_count"><t t-esc="widget.total_profit"/></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="PosCustomer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header text-center text-white" style="background:#de6a5e;">
                            Cajeros
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>Cajero</th>
                                        <th>Orders</th>
                                        <th>Monto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="widget.top_salesperson" t-as="salesperson">
                                        <tr>
                                            <td><t t-esc="salesperson[0]"/></td>
                                            <td><t t-esc="salesperson[2]"/></td>
                                            <td><t t-esc="salesperson[1]"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header text-center text-white" style="background:#de6a5e;">
                            Métodos de Pagos
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>Método de Pago</th>
                                        <th>Monto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="widget.payment_details" t-as="payment_method">
                                        <tr>
                                            <td><t t-esc="payment_method[0]"/></td>
                                            <td><t t-esc="payment_method[1]"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="PosChart">
        <div class="container">
            <!-- Content for PosChart goes here -->
        </div>
    </t>
</templates>

