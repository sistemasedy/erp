<odoo>

    <record id="action_auto_purchase" model="ir.actions.act_window">
        <field name="name">Dashboard de Automatización de Órdenes de Compra</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.automation</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create"> </p>
            <p></p>
        </field>
    </record>

    <menuitem id="menu_auto_purchase" name="Auto Compra" sequence="1" />

    <menuitem id="sub_menu_auto" parent="menu_auto_purchase" name="Auto Compra" sequence="0"/>
    <menuitem action="action_auto_purchase" id="menu_loan_req" parent="sub_menu_auto" name="Solicitudes de Auto Compra" sequence="0"/>
    <record id="view_purchase_order_automation_dashboard" model="ir.ui.view">
        <field name="name">purchase.order.automation.dashboard</field>
        <field name="model">purchase.order.automation</field>
        <field name="arch" type="xml">
            <form string="Dashboard de Automatización de Órdenes de Compra">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <button string="Ejecutar Automatización" type="object" name="create_or_update_purchase_orders" class="btn-primary"/>
                </group>
                <group>
                    <field name="total_orders"/>
                    <field name="total_quantity"/>
                    <field name="total_value"/>
                </group>
            </form>
        </field>
    </record>


    <record id="view_purchase_order_automation_tree" model="ir.ui.view">
        <field name="name">purchase.order.automation.tree</field>
        <field name="model">purchase.order.automation</field>
        <field name="arch" type="xml">
            <tree string="Automatizacion">
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="total_orders"/>
                    <field name="total_quantity"/>
                    <field name="total_value"/>
            </tree>
        </field>
    </record>
    
    
</odoo>

