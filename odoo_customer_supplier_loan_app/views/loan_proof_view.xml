<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
    
	<record id="loan_proof_form_view" model="ir.ui.view">
		<field name="name">loan.proof.form.view</field>
		<field name="model">loan.proof</field>
		<field name="arch" type="xml">
			<form>
				<sheet string="Loan Proof">
					<group>
						<group>
							<field name="name" placeholder="Proof Name..."/>
							
						</group>
						<group>
							<field name="is_mandatory" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>




	<record id="report_sale_margin_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">loan.installment</field>
            <field name="arch" type="xml">
                <form string="Report Sale" class="o_purchase_order">
                <header>
                    <button name="action_payment" states="draft" string="Crear Reporte" type="object" class="oe_highlight" data-hotkey="g"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,purchase" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <span class="o_form_label" attrs="{'invisible': [('state','not in',('draft','sent'))]}">Request for Quotation </span>
                        <span class="o_form_label" attrs="{'invisible': [('state','in',('draft','sent'))]}">Purchase Order </span>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'supplier', 'show_vat': True}"
                                placeholder="Name, TIN, Email, or Reference"
                            />
                            <field name="id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="applied_date" attrs="{'invisible': [('state','in',('purchase','done'))]}"/>
                           
                        </group>
                    </group>
                    <notebook>
                        <page string="Products" name="products">
                            <field name="order_line"
                                widget="section_and_note_one2many"
                                mode="tree,kanban"
                                context="{'default_state': 'draft'}"
                                attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}">
                                <tree string="Purchase Order Lines" editable="bottom">
                                    <control>
                                        <create name="add_product_control" string="Add a product"/>
                                        <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                    </control>
                                    <field name="state" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="product_type" invisible="1"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field
                                        name="product_id"
                                        attrs="{
                                            'readonly': [('state', 'in', ('purchase', 'to approve','done', 'cancel'))]}"
                                        context="{'partner_id':parent.partner_id, 'quantity':product_qty, 'company_id': parent.company_id}"
                                        force_save="1" domain="[('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                                    
                                    
                                    <field name="product_qty"/>
                                    <field name="product_uom" string="UoM" groups="uom.group_uom"
                                        attrs="{
                                            'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}"
                                        force_save="1" optional="show"/>
                                    
                                    <field name="price_unit"/>
                                    
                                    <field name="price_subtotal" widget="monetary"/>
                                    <field name="price_total" invisible="1"/>
                                </tree>
                                
                            </field>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                </div>
                </form>
            </field>
    </record>



    <record id="report_sale_view_tree" model="ir.ui.view">
        <field name="name">report.sale.view.tree</field>
        <field name="model">loan.installment</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'cancel'"
                string="Reportes de ventas"
                class="o_purchase_order"
                sample="1">
                <field name="name" string="Reference" readonly="1" decoration-bf="1" decoration-info="state in ('draft','sent')"/>
                <field name="applied_date" widget="date" invisible="context.get('quotation_only', False)" optional="show"/>
                <field name="partner_id"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" optional="show"/>
                <field name="user_id" widget="many2one_avatar_user" optional="show"/>
                
                <field name="principal_amount" sum="Total amount" widget="monetary" optional="show" decoration-bf="1"/>
                <field name="state" invisible="1"/>
                
            </tree>
        </field>
    </record>


    <record id="report_sale_form_action" model="ir.actions.act_window">
        <field name="name">Reporte de Venta y Margenes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loan.installment</field>
        <field name="view_mode">tree,formy</field>
        <field name="view_id" ref="report_sale_view_tree"/>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No purchase order found. Let's create one!
          </p><p>
            Once you ordered your products to your supplier, confirm your request for quotation and it will turn into a purchase order.
          </p>
        </field>
    </record>

    


    <record id="report_req_action" model="ir.actions.act_window">
        <field name="name">Solicitud</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loan.request</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create"> </p>
            <p></p>
        </field>
    </record>


    

    <record id="seq_loan" model="ir.sequence">
        <field name="name">loan_sequencer</field>
        <field name="code">loan.request</field>
        <field name="prefix">ABONO</field>
        <field name="padding">4</field>
    </record>

    
    <menuitem action="report_sale_form_action" id="menu_report_sale" parent="sub_req_menu_loan" name="Reporte de Venta" sequence="0"/>   
	
	<record id="loan_proof_tree_view" model="ir.ui.view">
		<field name="name">loan.proof.tree.view</field>
		<field name="model">loan.proof</field>
		<field name="arch" type="xml">
			<tree string="Loan Proof">
				<field name="name" />
				<field name="is_mandatory" />
			</tree>
		</field>
	</record>



	     
	 <record id="action_loan_proof" model="ir.actions.act_window">
		<field name="name">Loan Proofs</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">loan.proof</field>
		<field name="view_mode">tree,form</field>
	</record>
	
	<menuitem id="menu_main_loans" name="Abono de Cliente" groups="group_loan_manager,group_loan_user"/>
	<menuitem id="menu_loan_proofs" name="Loan Proof" parent="menu_configuration" action="action_loan_proof" sequence="0" />
	<menuitem id="menu_configuration" name="Configuration" parent="menu_main_loans" sequence="2" groups="group_loan_manager"/>
	
    </data>
</odoo>
