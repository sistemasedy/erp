<?xml version="1.0"  encoding="utf-8"?>
<odoo>
	<data>
	
	<record id="view_loan_installment_tree" model="ir.ui.view">
	    <field name="name">loan.installment.tree</field>
	    <field name="model">loan.installment</field>
	    <field name="priority">2</field>
	    <field name="arch" type="xml">
	    	<tree decoration-muted="state == 'cancel'"
                string="Reportes de ventas"
                class="o_purchase_order"
                sample="1">
                <field name="name" string="Reference" readonly="1" decoration-bf="1" decoration-info="state in ('draft','sent')"/>
                <field name="applied_date" widget="date" invisible="context.get('quotation_only', False)" optional="show"/>
                <field name="partner_id"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" optional="show"/>
                <field name="user_id" widget="many2one_avatar_user" optional="show"/>
                
                
                <field name="principal_amount" sum="Total amount" widget="monetary" optional="show" decoration-bf="1"/>
                <field name="salida" sum="Total amount" widget="monetary" optional="show" decoration-bf="1"/>
                <field name="balance_on_loans" sum="Total amount" widget="monetary" optional="show" decoration-bf="1"/>
                <field name="state" invisible="1"/>
                
            </tree>
	    </field>
	</record>

	<record id="view_loan_installment_form" model="ir.ui.view">
	    <field name="name">loan.installment.form</field>
	    <field name="model">loan.installment</field>
	    <field name="priority">2</field>
	    <field name="arch" type="xml">
	        <form string="Report Sale" class="o_purchase_order">
                <header>
                    <button name="action_payment"  string="General Reporte" type="object"  class="oe_highlight" data-hotkey="g"/>

                    <button name="action_payupdate_supplier_productsment"  string="Actualizar Productos" type="object"  class="oe_highlight" data-hotkey="g"/>
                    
                    <button name="action_payment" string="Print RFQ" type="object" states="draft" class="oe_highlight" groups="base.group_user" data-hotkey="k"/>
                    <button name="action_payment" type="object" states="sent" string="Confirm Order" class="oe_highlight" id="bid_confirm" data-hotkey="v"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,purchase" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <span class="o_form_label" attrs="{'invisible': [('state','not in',('draft','sent'))]}">Request for Quotation </span>
                        <span class="o_form_label" attrs="{'invisible': [('state','in',('draft','sent'))]}">Purchase Order </span>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'supplier', 'show_vat': True}"
                                placeholder="Name, TIN, Email, or Reference"
                            />
                            <field name="id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                           
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="principal_amount"/>
                            <field name="salida"/>
                            <field name="balance_on_loans"/>
                           
                        </group>
                    </group>
                    <notebook>
                        <page string="Products" name="products">
                            <field name="order_line"
                                widget="section_and_note_one2many"
                                mode="tree,kanban"
                                context="{'default_state': 'draft'}"
                                attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}">
                                <tree string="Purchase Order Lines" editable="bottom">
                                    <control>
                                        <create name="add_product_control" string="Add a product"/>
                                    </control>
                                    <field name="state" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="product_type" invisible="1"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field
                                        name="product_id"
                                        attrs="{
                                            'readonly': [('state', 'in', ('purchase', 'to approve','done', 'cancel'))]}"
                                        context="{'partner_id':parent.partner_id, 'quantity':product_qty, 'company_id': parent.company_id}"
                                        force_save="1" domain="[('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                                    
                                    
                                    <field name="product_qty"/>
                                    <field name="product_uom" string="UoM" groups="uom.group_uom"
                                        attrs="{
                                            'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}"
                                        force_save="1" optional="show"/>
                                    
                                    <field name="price_unit"/>
                                    <field name="price_cost"/>
                                    <field name="price_gan"/>
                                    <field name="price_margin"/>
                                    
                                    <field name="price_subtotal" widget="monetary"/>
                                    <field name="price_total" widget="monetary"/>
                                    <field name="price_balan" widget="monetary"/>
                                </tree>
                                
                            </field>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                </div>
            </form>
		</field>
    </record>


    <record id="view_product_form_inherited" model="ir.ui.view">
        <field name="name">product.form.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page name="automation" string="Automatizacion">
                    <group>
                        <group name="precios_valores">
                            <field name="main_supplier_id"/>
                        </group>
                        <group name="precios_valores">
                            <field name="auto_reorder"/>
                        </group>
                        <group name="precios_valores">
                            <field name="ignore_product"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    
    
    


    <record id="loan_installment_action" model="ir.actions.act_window">
        <field name="name">Reportes de Ventas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loan.installment</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create"> </p>
            <p></p>
        </field>
    </record>







    <record id="action_loan_installment_report" model="ir.actions.report">
        <field name="name">Imprimir Listado</field>
        <field name="model">loan.installment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">odoo_customer_supplier_loan_app.report_loan_installment</field>
        <field name="report_file">odoo_customer_supplier_loan_app.report_loan_installment</field>
        <field name="binding_type">report</field>
    </record>

    <template id="report_loan_installment">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 style="text-align: center;">Loan Installment Report</h2>

                        <div class="row mt32">
                            <div class="col-4">
                                <strong>Fecha:</strong>
                                <p t-esc="o.applied_date"/>
                            </div>
                            <div class="col-4">
                                <strong>Empresa:</strong>
                                <p t-esc="o.partner_id.name"/>
                            </div>
                                <div class="col-4">
                                <strong>Moneda:</strong>
                                <p t-esc="o.currency_id.name"/>
                            </div>
                        </div>

                        <div class="row mt32">
                            <div class="col-4">
                                <strong>Ventas:</strong>
                                <p t-esc="o.principal_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </div>
                            <div class="col-4">
                                <strong>Costos:</strong>
                                <p t-esc="o.salida"  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </div>
                            <div class="col-4">
                                <strong>Ganancia:</strong>
                                <p t-esc="o.balance_on_loans"  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </div>
                        </div>

                        <h3 class="mt32">Order Lines</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Descripci√≥n</th>
                                    <th>Cantidad</th>
                                    <th>Precio de Venta</th>
                                    <th>Precio de Compra</th>
                                    <th>Margen%</th>
                                    <th>Dif</th>
                                    <th>Ventas</th>
                                    <th>Costos</th>
                                        <th>Ganancia</th>
                                    <th>Producto</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.order_line" t-as="line">
                                    <td t-esc="line.name"/>
                                    <td t-esc="line.product_qty"/>
                                    <td t-esc="line.price_unit"  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    <td t-esc="line.price_cost"  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    <td t-esc="line.price_margin"/>
                                    <td t-esc="line.price_gan"  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    <td t-esc="line.price_subtotal"  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        <td t-esc="line.price_total"  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    <td t-esc="line.price_balan"  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    <td t-esc="line.product_id.name"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    


    







    


    







    <menuitem id="sub_menu_reportsale" parent="account.account_account_menu" name="Reporte de Ventas" sequence="1"/>



	
    <menuitem action="loan_installment_action" id="menu_loan_installment" parent="sub_req_menu_loan" name="Reporte de Ventas" sequence="2" groups="group_loan_manager"/>
    <menuitem action="loan_installment_action" id="menu_reportsale" parent="sub_menu_reportsale" name="Reporte de Ventas" sequence="2" groups="group_loan_manager"/>

	</data>
</odoo>

