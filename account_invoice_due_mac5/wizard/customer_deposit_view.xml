<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree para depósitos -->
    <record id="view_customer_deposit_tree" model="ir.ui.view">
        <field name="name">customer.deposit.tree</field>
        <field name="model">customer.deposit</field>
        <field name="arch" type="xml">
            <tree string="Depósitos de Clientes">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="deposit_date"/>
                <field name="amount"/>
                <field name="remaining_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form para depósitos -->
    <record id="view_customer_deposit_form" model="ir.ui.view">
        <field name="name">customer.deposit.form</field>
        <field name="model">customer.deposit</field>
        <field name="arch" type="xml">
            <form string="Depósito de Cliente">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="partner_id"/>
                        <field name="deposit_date"/>
                        <field name="amount"/>
                        <field name="remaining_amount" readonly="1"/>
                        <field name="currency_id"/>
                        <field name="journal_id"/>
                        <field name="liquidity_account_id"/>
                        <field name="state" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" states="draft" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para depósitos -->
    <record id="action_customer_deposit" model="ir.actions.act_window">
        <field name="name">Depósitos de Clientes</field>
        <field name="res_model">customer.deposit</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Botón en res.partner para registrar depósitos -->
    <record id="view_res_partner_form_inherit_deposit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.deposit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <button name="action_register_deposit" string="Registrar Depósito" type="object" class="oe_highlight" icon="fa-money"/>
            </xpath>
        </field>
    </record>

     <record id="view_res_partner_form_inherit_ref" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.ref</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Place 'ref' field inline with 'phone' -->
            <xpath expr="//field[@name='phone']" position="after">
                <field name="ref" string="Días de vencimiento" nolabel="1" class="oe_inline"/>
            </xpath>
        </field>
    </record>



    <!-- Botón en account.move para aplicar depósitos 
    <record id="view_account_move_form_inherit_deposit" model="ir.ui.view">
        <field name="name">account.move.form.inherit.deposit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_post']" position="after">
                <button name="action_open_apply_deposit_form" string="Aplicar Depósitos" type="object" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    -->

    <!-- Vista para aplicar depósitos -->
    <record id="view_apply_deposit_form" model="ir.ui.view">
        <field name="name">apply.deposit.form</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form string="Aplicar Depósitos">
                <sheet>
                    <group>
                        <!-- Campo del cliente -->
                        <field name="partner_id" readonly="1"/>
                        
                        <!-- Campo del saldo pendiente de la factura -->
                        <field name="amount_residual" readonly="1" string="Monto Pendiente Factura"/>
                    </group>
                    
                    <group>
                        <!-- Depósitos del cliente -->
                        <field name="deposit_ids" widget="many2many_tags" 
                            domain="[('partner_id', '=', partner_id), 
                                    ('remaining_amount', '>', 0), 
                                    ('state', '=', 'confirmed')]"
                            context="{'default_order': 'deposit_date asc'}"
                            options="{'default_select': 'first'}"/>
                    </group>

                    <group>
                        <!-- Balance acumulado de depósitos seleccionados -->
                        <field name="applied_balance" readonly="1" string="Monto Aplicado"/>
                        
                        <!-- Saldo restante después de aplicar depósitos -->
                        <field name="remaining_balance" readonly="1" string="Saldo Pendiente Final"/>
                    </group>

                    
                </sheet>

                <footer>
                    <button string="Aplicar Depósitos" type="object" name="action_confirm_apply_deposit" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="view_move_form_inherit_custom" model="ir.ui.view">
        <field name="name">account.move.form.inherit.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='alert alert-info mb-0']" position="replace">
                <div class="alert alert-info mb-0" role="alert" attrs="{'invisible': ['|', '|', ('move_type', '!=', 'out_invoice'), ('invoice_has_outstanding', '=', False), ('payment_state', 'not in', ('not_paid', 'partial'))]}">
                    Tienes <bold><a class="alert-link" href="#outstanding" role="button">test edy créditos pendientes</a></bold> para este cliente. Puedes asignarlos para marcar la factura como pagada EDY.
                </div>
            </xpath>

        </field>
    </record>
</odoo>

