<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <template id="website_sale_customer_comment" inherit_id="website_sale.payment">     
        <xpath expr="//div[@id='payment_method']" position="before">
            <div class="mb8 row" >               
                <div t-attf-class="form-group col-lg-6">
                    <label class="control-label" for="customer_comment">Customer Order Comment</label>
                    <textarea rows="3" id="customer_comment" class="form-control" placeholder="Write a comment..."></textarea>                      
                </div> 
            </div>  
        </xpath>        
    </template>

    <!-- Main Legal Page Template -->
    <template id="legal_page" name="Legal Page" priority="30">
        <t t-call="website.layout">
            <t t-set="pageName" t-value="'Legal page'" />
            <div id="wrap" class="oe_structure oe_empty">
                <!-- Contact section starts here -->


                <section class="s_title o_colored_level pb0 pt0" style="background-image: url('theme_fuge/static/src/images/what-we-offer/left2.jpg');">
                    <div class="container s_allow_columns">
                      <h1 style="text-align: center;">
                        <font style="font-size: 62px;"></font>
                        <font>
                          <span style="font-size: 48px;">Punta Cana Airport Transfer</span>
                        </font>
                        <font style="font-size: 62px;"></font>
                        <br/>
                      </h1>
                    </div>
                </section>

                <!-- Contact section starts here -->

                <section class="contact_form">
                    <div class="container">
                        <div class="c_form">
                            <div class="col-12 col-md-6  pt-5">
                                <div class="card " style="color:#cccccc;">
                                    <div class="card-body">

                                        <div class="form-group col-lg-8">
                                            <div class="row">
                                                <div class='col-sm-4'>
                                                    <div class="form-group">
                                                        <label class="control-label" for="delivery_date">Pick-Up Date</label>
                                                        <div class='input-group date'>
                                                            <input type='text' class="form-control" id='delivery_date' readonly="True"/>
                                                            <span class="input-group-addon" id='delivery_date_icon'>
                                                                <span class="fa fa-calendar"></span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label" for="delivery_date">Pick-Up Time</label>
                                                        <div class='input-group date'>
                                                            
                                                            <input type="time" id="up_time" t-attf-class="form-control"/>
                                                        </div>
                                                    </div>
                                                </div>
                                             </div>
                                             <t t-if="website and not website.is_customer_order_delivery_comment_feature">
                                                <div class="row">
                                                    <div class='col-sm-6'>
                                                        <div class="form-group">
                                                            <label class="control-label" for="delivery_comment">Delivery Comment</label><br/>
                                                            <textarea class="form-control" id="delivery_comment" placeholder="Write a comment..."></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                             </t>


                                             <div class="float-end mt-2">
                                                <button name="o_transfer_submit_button" type="submit" class="btn btn-primary" data-icon-class="fa-chevron-right">
                                                <a class="btn btn-contact o_website_form_send" href="/shop">
                                                    Send
                                                </a> 
                                                </button>
                                             </div>
                                        </div>
                                        
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </Section>



             
                
            </div>
        </t>
    </template>

    <!-- Publish the template on the website -->
    <record id="legal_page_page" model="website.page">
        <field name="website_published">True</field>
        <field name="url">/legal</field>
        <field name="view_id" ref="legal_page" />
    </record>

</odoo>







