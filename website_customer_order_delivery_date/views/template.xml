<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- /shop product listing -->
    <template id="product_list_page" name="Products">
        
        <t t-call="website.layout">
            <t t-set="pageName" t-value="'Legal page'" />
            <div id="wrap" class="oe_structure oe_empty">
                <!-- Contact section starts here -->


                <section class="s_title o_colored_level pb0 pt0" style="background-image: url('theme_fuge/static/src/images/what-we-offer/left2.jpg');">
                    <div class="container s_allow_columns">
                      <h1 style="text-align: center;">
                        <font style="font-size: 62px;"></font>
                        <font>
                          <span style="font-size: 48px;">Punta Cana Airport Transfer</span>
                        </font>
                        <font style="font-size: 62px;"></font>
                        <br/>
                      </h1>
                    </div>
                </section>

                <!-- Contact section starts here -->

             
                
            </div>
        </t>


    </template>



    <!-- Publish the template on the website -->
    <record id="product_list_page_page" model="website.page">
        <field name="website_published">True</field>
        <field name="url">/road-packages-excursions2</field>
        <field name="view_id" ref="product_list_page" />
    </record>




   

    <!-- Main Legal Page Template -->
    <template id="legal_page" name="Legal Page" priority="30">
        <t t-call="website.layout">
            <t t-set="pageName" t-value="'Legal page'" />
            <div id="wrap" class="oe_structure oe_empty">
                <!-- Contact section starts here -->


                <section class="s_title o_colored_level pb0 pt0" style="background-image: url('theme_fuge/static/src/images/what-we-offer/left2.jpg');">
                    <div class="container s_allow_columns">
                      <h1 style="text-align: center;">
                        <font style="font-size: 62px;"></font>
                        <font>
                          <span style="font-size: 48px;">Punta Cana Airport Transfer</span>
                        </font>
                        <font style="font-size: 62px;"></font>
                        <br/>
                      </h1>
                    </div>
                </section>

                <!-- Contact section starts here -->

                <section class="contact_form">
                    <div class="container">
                        <div class="c_form">
                            <div class="col-12 col-md-12  pt-5">
                                <div class="card " style="color:#cccccc;">
                                    <div class="card-body">

                                        <div class="form-group col-lg-8">
                                            <div class="row">
                                                    <div t-attf-class="mb-3  col-lg-6" id="t1">
                                                        <label t-attf-class="col-form-label " for="email">Pick-Up Date</label>
                                                        <input type="date" id="delivery_date" t-attf-class="form-control " />
                                                    </div>
                                                    <div t-attf-class="mb-3  col-lg-6" id="div_phone">
                                                        <label class="col-form-label" for="phone">Pick-Up Time</label>
                                                        <input type="time" id="up_time" t-attf-class="form-control " />
                                                    </div>

                                                    <div t-attf-class="mb-3  col-lg-6" id="t1">
                                                        <label class="col-form-label" for="city">Pick Up Location</label>
                                                        
                                                        <select name="vat" t-attf-class="form-control " data-init="1">
                                                            <option t-att-value="Locacion">Location</option>
                                                                <option t-att-value="AlsolLuxuryHotel">
                                                                    Punta Cana Air Import (PUJ)
                                                                </option>
                                                                <option t-att-value="data2">
                                                                    Presidential Suite
                                                                </option>
                                                        </select>
                                                    </div>

                                                    <div t-attf-class="mb-3  col-lg-6" id="t1">
                                                        <label class="col-form-label" for="city">Drop Off Location</label>
                                                        
                                                        <select name="vat" t-attf-class="form-control " data-init="1">
                                                            <option t-att-value="Locacion">Location</option>
                                                                <option t-att-value="AlsolLuxuryHotel">
                                                                    Alsol Luxury Hotel
                                                                </option>
                                                                <option t-att-value="data2">
                                                                    el otro Alsol Luxury Hotel
                                                                </option>
                                                        </select>
                                                    </div>


                                                   
                                             </div>


                                             <div class="float-end mt-2">
                                                <button name="o_transfer_submit_button" type="submit" class="btn btn-primary" data-icon-class="fa-chevron-right">
                                                <a class="btn btn-contact o_website_form_send" href="/shop">
                                                    Find a Transfer
                                                </a> 
                                                </button>
                                             </div>
                                        </div>
                                        
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>



             
                
            </div>
        </t>
    </template>

    <!-- Publish the template on the website -->
    <record id="legal_page_page" model="website.page">
        <field name="website_published">True</field>
        <field name="url">/legal</field>
        <field name="view_id" ref="legal_page" />
    </record>

</odoo>







