<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
    	<xpath expr="//div[@class='pos-receipt-contact']" position="inside">
    		<t t-if='receipt.client'>
                <div>Client: <t t-esc='receipt.client.name' /></div>
            </t>
    	</xpath>
    </t>

        <t
        t-name="ClientListScreen"
        t-inherit="point_of_sale.ClientListScreen"
        t-inherit-mode="extension"
        owl="1"
    >
        
        <xpath expr="//table[hasclass('client-list')]/thead/tr" position="inside">
            <th >
                Credito
            </th>
            <th >
                Limite
            </th>
            
        </xpath>
        
        
    </t>
</templates>