<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    	

        <template id="report_list">
            <t t-call="web.basic_layout">
            	<div class="header">
		            <div class="row">
		                <div class="col-6 offset-2 text-center">
		                    <span>VARIEDADES COMERCIALES Y NOVEDADES BERROA, SRL</span>
		                </div>
		                <div class="col-2">
                            <strong> Listado de Articulos</strong>
                        </div>
		            </div>
		        </div>
            	

            	<div class="row">

                    <table >
                        <thead>
                            <tr >
                                <th colspan="6">Descripcion</th>
	                            <th >Precio  </th>
	                            <th >Costo</th>
	                            <th >
	                                Exist
	                            </th>
	                            <th >
	                                Codigo
	                            </th>
	                            <th >
	                                Loc
	                            </th>
	                            <th >
	                                Grupo
	                            </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="product">
                                <tr >
                                    <td style="border: 1px solid black;" colspan="6">
                                        <span t-field="product.name" />
                                    </td>
                                    <td style="border: 1px solid black;">
                                    	<span t-field="product.list_price"/>
                                        
                                    </td>
                                    <td style="border: 1px solid black;">
                                    	<span t-field="product.standard_price"/>
                                        
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span class="text-nowrap" t-field="product.qty_available"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span class="text-nowrap" t-field="product.barcode"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span class="text-nowrap" t-field="product.localization"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        
                                        <span class="text-nowrap" t-field="product.grupo" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <template id="report_list_verif">
            <t t-call="web.basic_layout">
            	<div class="header">
		            <div class="row">
		                <div class="col-6 offset-2 text-center">
		                    <span>VARIEDADES COMERCIALES Y NOVEDADES BERROA, SRL</span>
		                </div>
		                <div class="col-2">
		                	<H2>
                               <strong> Listado de Verificacion</strong>
                            </H2>

                        </div>
		            </div>
		        </div>
            	

            	<div class="row">

                    <table >
                        <thead>
                            <tr >
                                <th colspan="6">Descripcion</th>
	                            <th >Lunes  </th>
	                            <th >Martes</th>
	                            <th >
	                                Miercoles
	                            </th>
	                            <th >
	                                Jueves
	                            </th>
	                            <th >
	                                Viernes
	                            </th>
	                            <th >
	                                Sabado
	                            </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="product">
                                <tr >
                                    <td style="border: 1px solid black;" colspan="6">
                                        <span t-field="product.name" />
                                    </td>
                                    <td style="border: 1px solid black;">
                                    	<span t-field="product.numero"/>
                                        
                                    </td>
                                    <td style="border: 1px solid black;">
                                    	<span t-field="product.numero"/>
                                        
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span class="text-nowrap" t-field="product.numero"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span class="text-nowrap" t-field="product.numero"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span class="text-nowrap" t-field="product.numero"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        
                                        <span class="text-nowrap" t-field="product.numero" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <template id="basic_layout">
	        <t t-call="web.html_container">
	            <t t-if="not o" t-set="o" t-value="doc"/>
	            <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
	                <t t-raw="0"/>
	            </div>
	        </t>
	    </template>

	    <!-- Private templates used internally by reports -->


	    <template id="internal_layout">
	        <div class="header">
	            <div class="row">
	                <div class="col-6 offset-2 text-center">
	                    <span>VARIEDADES COMERCIALES Y NOVEDADES BERROA, SRL</span>
	                </div>
	                <div class="col-2 offset-3 text-right">
	                    <ul class="list-inline">
	                        <li class="list-inline-item"><span class="page"/></li>
	                        <li class="list-inline-item">/</li>
	                        <li class="list-inline-item"><span class="topage"/></li>
	                    </ul>
	                </div>
	            </div>
	        </div>
	        <div >
	          <t t-raw="0"/>
	        </div>
	    </template>


    </data>
</odoo>