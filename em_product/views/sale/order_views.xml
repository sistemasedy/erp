<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="replace">
                    <field name="date_order" nolabel="1" attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
                </xpath>
                <xpath expr="//div[hasclass('o_td_label')]" position="replace">
                    <div class="o_td_label">
                        <label for="date_order" string="Fecha Cotizacion"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_form_inherit_fiscal" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.fiscal</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='order_lines']" position="after">
                    <page string="InformaciÃ³n Fiscal (NCF)" name="ncf_page">
                        <group>
                            <group string="Datos NCF" name="ncf_data_group">
                                <field name="ncf_tax"/>
                                <field name="ncf_amount_purchase"/>
                                <field name="ncf_total"/>
                                <field name="ncf_day"/>
                                <field name="ncf_year_month"/>
                                <field name="ncf_check"/>
                            </group>
                            <group string="Verificaciones" name="ncf_checks_group">
                                <field name="check_complete"/>
                                <field name="check_verificate"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_tree_inherit_fiscal" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit.fiscal</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="ncf_tax" optional="show"/>
                    <field name="ncf_amount_purchase" optional="show"/>
                    <field name="ncf_total" optional="show"/>
                    <field name="ncf_day" optional="hide"/>
                    <field name="ncf_year_month" optional="hide"/>
                    <field name="ncf_check" optional="hide"/>
                    <field name="check_complete"/>
                    <field name="check_verificate"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
