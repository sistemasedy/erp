<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="replace">
                    <field name="date_order" nolabel="1" attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
                </xpath>
                <xpath expr="//div[hasclass('o_td_label')]" position="replace">
                    <div class="o_td_label">
                        <label for="date_order" string="Fecha Cotizacion"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_form_inherit_fiscal" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.fiscal</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                <page string="InformaciÃ³n Fiscal (NCF)" name="ncf_page">
                    <group>
                        <group string="Datos NCF" name="ncf_data_group">
                            <field name="ncf_tax_p"/>
                            <field name="ncf_amount_purchase_p"/>
                            <field name="ncf_total_p"/>
                            <field name="ncf_day_p"/>
                            <field name="ncf_year_month_p"/>
                            <field name="ncf_check_p"/>
                        </group>
                        <group string="Verificaciones" name="ncf_checks_group">
                            <field name="check_complete_p"/>
                            <field name="check_verificate_p"/>
                        </group>
                    </group>
                </page>
                </xpath>
            </field>
        </record>

        
    


    </data>
</odoo>
